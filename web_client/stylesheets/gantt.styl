.chart
    font-family 'Droid Sans',sans-serif
    font-size 12px
 
.axis path,.axis line 
    fill none
    stroke #000
    shape-rendering crispEdges
 
.g-collection-infopage-gantt
    width 100%
    height 600px
    position relative

.infopage-gantt-tooltip
    display none
    background #eee
    box-shadow 0 0 5px #999999
    color #333
    font-size 12px
    padding 10px
    position absolute
    text-align center
    top 95px
    width 150px
    z-index 10

.gantt-tooltip-event
    font-weight bold
    font-size 14px

.gantt-tooltip-data
    display table
    width   90%

.gantt-tooltip-data-row
    display table-row

.gantt-tooltip-key
    font-weight bold
    text-align left
    width 60%
    display table-cell

.gantt-tooltip-value
    text-align right
    width 40%
    display table-cell

.gantt-event
    stroke-width 2px

.gantt-event:hover
    stroke-width 4px
 
.birth 
